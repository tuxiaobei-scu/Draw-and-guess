<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:left_margin="16vp"
    ohos:right_margin="16vp"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:item_info"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:padding="4vp"
        ohos:text="Item0"
        ohos:top_margin="3vp"
        ohos:text_size="20fp"
        ohos:layout_alignment="left"
        ohos:multiple_lines="true"
        ohos:background_element="$graphic:background_answer"
        ohos:visibility="hide"/>
    <Text
        ohos:id="$+id:item_ok"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:padding="4vp"
        ohos:text="Item0"
        ohos:top_margin="3vp"
        ohos:text_size="20fp"
        ohos:layout_alignment="left"
        ohos:multiple_lines="true"
        ohos:background_element="$graphic:background_answer_ok"
        ohos:visibility="hide"/>
    <Text
        ohos:id="$+id:item_sim"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:padding="4vp"
        ohos:text="Item0"
        ohos:top_margin="3vp"
        ohos:text_size="20fp"
        ohos:layout_alignment="left"
        ohos:multiple_lines="true"
        ohos:background_element="$graphic:background_answer_sim"
        ohos:visibility="hide"/>
    <Text
        ohos:id="$+id:item_wa"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:padding="4vp"
        ohos:text="Item0"
        ohos:top_margin="3vp"
        ohos:text_size="20fp"
        ohos:layout_alignment="left"
        ohos:multiple_lines="true"
        ohos:background_element="$graphic:background_answer_wa"
        ohos:visibility="hide"/>
</DirectionalLayout>